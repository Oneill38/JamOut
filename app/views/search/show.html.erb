<h1> Concerts Matching Your Search Criteria </h1>

<%= render "layouts/nav" %>

<div class="results">
  <p>
    <% @results.each do |concert| %>
      <div class="results_container">
      <% if !(concert.picture) %>
        <%= image_tag("http://bgcbloomington.com/wp-content/uploads/2013/06/smaller-blank-head-shot.jpg") %></br>
      <% else %>
        <%=image_tag(concert.picture) %></br>
      <% end %>
      <%= concert.title %></br>
      <%= concert.time %></br>
      <%= concert.date %></br>
      <%= concert.venue.name %></br>
      <%= label_tag "Tickets From: " %> <%= concert.min %> <%= label_tag " - " %> <%=concert.max %></br>
      <a href="<%= concert.url %>">Buy Tickets</a>


      <%= form_tag("/tickets", method: :post) do %>
        <%= hidden_field_tag(:user_id, current_user.id) %>
        <%= hidden_field_tag(:title, concert.title) %>
        <%= submit_tag("Add to My Events") %>

      <% end %>
     </br><br>
      </div>
    <% end %>
  </p>
</div>
